<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PrimaryButtonOrange" parent="@style/PrimaryButton">
        <item name="android:background">@drawable/button_focus_orange</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/common_text_button_size</item>
    </style>

    <style name="SecondaryButton" parent="@style/PrimaryButton">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/common_text_button_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <dimen name="common_text_button_size">14sp</dimen>
</resources>
